
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ServerName": {
            "type": "string",
            "defaultValue": "Azure Arc server naam"
        },
        "Message": {
            "type": "string",
            "defaultValue": "Dit is een test bericht"
        }
    },
    "resources": [
        {
            "type": "Microsoft.HybridCompute/machines/extensions",
            "apiVersion": "2021-05-20",
            "name": "[concat(parameters('ServerName'),'/CustomScriptExtension')]",
            "location": "westeurope",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "autoUpgradeMinorVersion": true,
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File LogGenerator.ps1 -message \"', parameters('Message'),'\"')]",
                    "fileUris": [
                        "https://bitdefend.blob.core.windows.net/dutchazuremeetup/LogGenerator.ps1?sp=r&st=2023-11-23T16:04:36Z&se=2023-11-24T00:04:36Z&spr=https&sv=2022-11-02&sr=b&sig=1KnPx8MznYqbcU3asF%2FpBv4JTY95NWDAlkaMEWYbmgQ%3D"
                    ]
                }
            }
        }
    ]
}
